{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["plugin:@next/next/recommended"],
  "plugins": ["react", "react-hooks", "@typescript-eslint"],
  "rules": {
    "@next/next/no-img-element": "off",
    "@next/next/no-css-tags": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
